<h1>Trainer Details</h1>

<p>Name: <%= @trainers.name %></p>
<p>Monster/s:</p>
<% for monster in @trainers.monsters %>
<p><a href="/monsters/<%= monster.id %>"><%= monster.name() %></p>
<% end %>


<p> <a class="button" href="/trainers/<%= @trainers.id %>/edit">Edit Trainer</a> </p>

<form action="/trainers/<%= @trainers.id %>/delete" method="post">
<input type="submit" value="Kill Trainer">
</form>
